---
import type { CollectionEntry } from "astro:content";
import BaseLayout from "./BaseLayout.astro";

interface Props {
  post: CollectionEntry<"blog">;
}

const { post } = Astro.props;
const { title, description, pubDate, updatedDate, heroImage, tags } = post.data;

const formattedDate = pubDate.toLocaleDateString("en-GB", {
  year: "numeric",
  month: "long",
  day: "numeric",
});

const formattedUpdatedDate = updatedDate?.toLocaleDateString("en-GB", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<BaseLayout title={`${title} — Omar Maaouane`} description={description} image={heroImage}>
  <article class="blog-post">
    <header class="post-header">
      <div class="post-meta">
        <time datetime={pubDate.toISOString()}>{formattedDate}</time>
        {updatedDate && (
          <span class="updated">
            · Updated <time datetime={updatedDate.toISOString()}>{formattedUpdatedDate}</time>
          </span>
        )}
      </div>
      <h1>{title}</h1>
      {description && <p class="post-description">{description}</p>}
      {tags.length > 0 && (
        <div class="post-tags">
          {tags.map((tag) => (
            <span class="tag">#{tag}</span>
          ))}
        </div>
      )}
    </header>

    {heroImage && (
      <img
        class="hero-image"
        src={heroImage}
        alt={`Hero image for ${title}`}
        width="720"
        height="360"
      />
    )}

    <div class="post-content">
      <slot />
    </div>

    <footer class="post-footer">
      <a href="/blog" class="back-link">&larr; Back to all posts</a>
    </footer>
  </article>
</BaseLayout>

<style>
  .blog-post {
    max-width: 100%;
  }

  .post-header {
    margin-bottom: 2.5rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--color-border);
  }

  .post-meta {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    font-family: var(--font-mono);
    margin-bottom: 0.75rem;
  }

  .post-meta .updated {
    color: var(--color-text-muted);
  }

  .post-header h1 {
    font-size: 2rem;
    margin-bottom: 0.75rem;
    letter-spacing: -0.03em;
  }

  .post-description {
    font-size: 1.125rem;
    color: var(--color-text-muted);
    line-height: 1.6;
    margin-bottom: 1rem;
  }

  .post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag {
    font-family: var(--font-mono);
    font-size: 0.8125rem;
    color: var(--color-accent);
    background: rgba(59, 130, 246, 0.1);
    padding: 0.2em 0.6em;
    border-radius: 4px;
  }

  .hero-image {
    width: 100%;
    height: auto;
    border-radius: 8px;
    margin-bottom: 2.5rem;
    border: 1px solid var(--color-border);
  }

  .post-content {
    font-size: 1.0625rem;
    line-height: 1.8;
    max-width: var(--content-width);
  }

  .post-footer {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--color-border);
  }

  .back-link {
    font-family: var(--font-mono);
    font-size: 0.875rem;
    color: var(--color-text-muted);
    transition: color var(--transition);
  }

  .back-link:hover {
    color: var(--color-accent);
  }

  @media (max-width: 640px) {
    .post-header h1 {
      font-size: 1.5rem;
    }

    .post-description {
      font-size: 1rem;
    }

    .post-content {
      font-size: 1rem;
    }
  }
</style>
