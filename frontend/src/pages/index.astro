---
import { getCollection } from "astro:content";
import BaseLayout from "../layouts/BaseLayout.astro";

const posts = (await getCollection("blog"))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);
---

<BaseLayout title="Omar Maaouane — Software Engineer">
  <section class="hero">
    <p class="greeting">Hey, I'm</p>
    <h1>Omar Maaouane</h1>
    <p class="tagline">
      Software engineer based in London. I build things for the web, think about
      infrastructure, and occasionally write about it.
    </p>
    <div class="hero-links">
      <a href="/blog" class="hero-link primary">Read the blog &rarr;</a>
      <a href="/about" class="hero-link secondary">More about me</a>
    </div>
  </section>

  {posts.length > 0 && (
    <section class="recent-posts">
      <h2>Recent posts</h2>
      <ul class="post-list">
        {posts.map((post) => {
          const formattedDate = post.data.pubDate.toLocaleDateString("en-GB", {
            year: "numeric",
            month: "short",
            day: "numeric",
          });
          return (
            <li class="post-item">
              <a href={`/blog/${post.slug}/`}>
                <time datetime={post.data.pubDate.toISOString()}>
                  {formattedDate}
                </time>
                <h3>{post.data.title}</h3>
                <p>{post.data.description}</p>
              </a>
            </li>
          );
        })}
      </ul>
      <a href="/blog" class="view-all">View all posts &rarr;</a>
    </section>
  )}
</BaseLayout>

<style>
  /* ── Hero ── */
  .hero {
    padding: 4rem 0 3rem;
  }

  .greeting {
    font-family: var(--font-mono);
    font-size: 1rem;
    color: var(--color-accent);
    margin-bottom: 0.5rem;
  }

  .hero h1 {
    font-size: 3rem;
    font-weight: 700;
    letter-spacing: -0.04em;
    margin-bottom: 1.25rem;
  }

  .tagline {
    font-size: 1.25rem;
    color: var(--color-text-muted);
    line-height: 1.6;
    max-width: 640px;
    margin-bottom: 2rem;
  }

  .hero-links {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .hero-link {
    font-family: var(--font-mono);
    font-size: 0.9375rem;
    padding: 0.625rem 1.25rem;
    border-radius: 6px;
    transition: all var(--transition);
  }

  .hero-link.primary {
    background: var(--color-accent);
    color: #fff;
  }

  .hero-link.primary:hover {
    background: var(--color-accent-hover);
    color: #fff;
  }

  .hero-link.secondary {
    border: 1px solid var(--color-border);
    color: var(--color-text-muted);
  }

  .hero-link.secondary:hover {
    border-color: var(--color-text-muted);
    color: var(--color-text);
  }

  /* ── Recent Posts ── */
  .recent-posts {
    padding: 2rem 0;
    border-top: 1px solid var(--color-border);
  }

  .recent-posts h2 {
    font-size: 1.25rem;
    font-family: var(--font-mono);
    font-weight: 600;
    margin-bottom: 1.5rem;
    margin-top: 0;
  }

  .post-list {
    list-style: none;
    padding: 0;
    margin: 0 0 1.5rem;
  }

  .post-item {
    margin-bottom: 0;
    border-bottom: 1px solid var(--color-border);
  }

  .post-item:first-child {
    border-top: 1px solid var(--color-border);
  }

  .post-item a {
    display: block;
    padding: 1.25rem 0;
    color: var(--color-text);
    transition: all var(--transition);
  }

  .post-item a:hover {
    color: var(--color-text);
  }

  .post-item a:hover h3 {
    color: var(--color-accent);
  }

  .post-item time {
    font-family: var(--font-mono);
    font-size: 0.8125rem;
    color: var(--color-text-muted);
  }

  .post-item h3 {
    font-size: 1.125rem;
    font-weight: 600;
    margin: 0.25rem 0 0.375rem;
    transition: color var(--transition);
  }

  .post-item p {
    font-size: 0.9375rem;
    color: var(--color-text-muted);
    line-height: 1.5;
    margin: 0;
  }

  .view-all {
    font-family: var(--font-mono);
    font-size: 0.875rem;
    color: var(--color-text-muted);
    transition: color var(--transition);
  }

  .view-all:hover {
    color: var(--color-accent);
  }

  @media (max-width: 640px) {
    .hero {
      padding: 2rem 0;
    }

    .hero h1 {
      font-size: 2.25rem;
    }

    .tagline {
      font-size: 1.0625rem;
    }
  }
</style>
